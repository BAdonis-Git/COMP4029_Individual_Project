<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:NeuroSpectatorMAUI.PageModels"
             xmlns:models="clr-namespace:NeuroSpectatorMAUI.Models"
             xmlns:pages="clr-namespace:NeuroSpectatorMAUI.Pages"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:controls="clr-namespace:NeuroSpectatorMAUI.Pages.Controls"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="NeuroSpectatorMAUI.Pages.YourDevicesPage"
             Title="Your Devices">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label 
                Text="Your Devices"
                FontSize="24"
                HorizontalOptions="Center"/>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Button 
                        x:Name="InitialiseButton"
                        Text="Initialise Muse Manager"
                        Clicked="OnInitialiseClicked"
                        HorizontalOptions="Fill" />

                    <Button x:Name="ScanButton" 
                            Text="Start Scanning" 
                            Clicked="OnScanClicked"
                            HorizontalOptions="Fill"
                            IsEnabled="False" />

                    <Label Text="Available Devices" 
                           FontSize="Subtitle" 
                           Margin="0,10,0,0"/>

                    <ListView x:Name="DevicesList" 
                              HeightRequest="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame Padding="10" Margin="0,5">
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                                            <Label Text="{Binding ConnectionState}" 
                                                   HorizontalOptions="EndAndExpand" 
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Button x:Name="ConnectButton" 
                                Text="Connect" 
                                Clicked="OnConnectClicked" 
                                HorizontalOptions="FillAndExpand"/>

                        <Button x:Name="DisconnectButton" 
                                Text="Disconnect" 
                                Clicked="OnDisconnectClicked" 
                                HorizontalOptions="FillAndExpand"
                                IsEnabled="False"/>
                    </StackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Status" FontSize="Subtitle"/>
                    <Label x:Name="StatusLabel"
                           Text="Not initialised"
                           TextColor="DarkGray"
                           HorizontalOptions="Center"/>

                    <Label Text="Data" FontSize="Subtitle" Margin="0,10,0,0"/>
                    <Label x:Name="DataValueLabel" 
                           Text="No data" 
                           TextColor="DarkGray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>