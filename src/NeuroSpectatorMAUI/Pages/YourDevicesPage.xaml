<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:NeuroSpectatorMAUI.PageModels"
             xmlns:models="clr-namespace:NeuroSpectatorMAUI.Models"
            xmlns:pages="clr-namespace:NeuroSpectatorMAUI.Pages"
            xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
            xmlns:controls="clr-namespace:NeuroSpectatorMAUI.Pages.Controls"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="NeuroSpectatorMAUI.Pages.YourDevicesPage"
             Title="Your Devices">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label 
            Text="Your Devices"
            FontSize="24"
            HorizontalOptions="Center"/>

        <Button 
            x:Name="InitialiseButton"
            Text="Initialise Muse Manager"
            Clicked="OnInitialiseClicked"/>

        <Label 
            x:Name="StatusLabel"
            Text="Not initialised"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>