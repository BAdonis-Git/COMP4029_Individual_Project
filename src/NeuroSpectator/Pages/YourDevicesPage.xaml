<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:NeuroSpectator.PageModels"
             x:Class="NeuroSpectator.Pages.YourDevicesPage"
             Title="Your Devices">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label 
                Text="Your Devices"
                FontSize="24"
                HorizontalOptions="Center"/>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Button 
                        Text="Initialize Muse Manager"
                        Command="{Binding InitializeCommand}"
                        IsEnabled="{Binding CanInitialize}"
                        HorizontalOptions="Fill" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0" 
                                Text="Start Scanning" 
                                Command="{Binding StartScanCommand}"
                                IsEnabled="{Binding CanScan}" />

                        <Button Grid.Column="1" 
                                Text="Stop Scanning" 
                                Command="{Binding StopScanCommand}"
                                IsEnabled="{Binding IsScanning}" />
                    </Grid>

                    <Label Text="Available Devices" 
                           FontSize="Subtitle" 
                           Margin="0,10,0,0"/>

                    <CollectionView 
                        ItemsSource="{Binding AvailableDevices}"
                        SelectedItem="{Binding SelectedDevice}"
                        SelectionMode="Single"
                        HeightRequest="150">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" Margin="5">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                                        <Label Text="{Binding BluetoothMac}" FontSize="Small" />
                                        <Label Text="{Binding RSSI, StringFormat='Signal: {0:F1} dBm'}" FontSize="Small" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No devices found. Start scanning to discover Muse headbands."
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" 
                                   TextColor="Gray"/>
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="Connect" 
                                Command="{Binding ConnectCommand}" 
                                IsEnabled="{Binding CanConnect}"/>

                        <Button Grid.Column="1"
                                Text="Disconnect" 
                                Command="{Binding DisconnectCommand}" 
                                IsEnabled="{Binding CanDisconnect}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Status" FontSize="Subtitle"/>
                    <Label Text="{Binding StatusText}"
                           TextColor="DarkGray"
                           HorizontalOptions="Center"/>

                    <Label Text="Data" FontSize="Subtitle" Margin="0,10,0,0"/>
                    <Label Text="{Binding DataText}" 
                           TextColor="DarkGray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>